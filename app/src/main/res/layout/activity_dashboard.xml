<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/drawer_layout">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/main_toolbar"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add BOOK"
            android:textStyle="bold"
            android:textSize="50sp"
            android:gravity="center"
            android:id="@+id/book"
            />
        <TextView
            android:id="@+id/judul"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/book"
            android:padding="15dp"
            android:text="Judul"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editjudul"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/judul"
            android:hint="Ikigai"
            android:inputType="text"
            android:padding="20dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/halaman"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/editjudul"
            android:padding="15dp"
            android:text="Halaman"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edithalaman"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/halaman"
            android:hint="500hal"
            android:inputType="text"
            android:padding="20dp" />

        <TextView
            android:id="@+id/Publisher"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/edithalaman"
            android:padding="15dp"
            android:text="Publisher"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editpublisher"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/Publisher"
            android:hint="Elexmedia Komputindo"
            android:inputType="text"
            android:padding="20dp" />

        <TextView
            android:id="@+id/Penulis"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/editpublisher"
            android:padding="15dp"
            android:text="Penulis"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editPenulis"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/Penulis"
            android:hint="Benjamin Graham"
            android:inputType="text"
            android:padding="20dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/btnsimpanbuku"
            android:gravity="center"
            />



    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@android:color/white">
        <include
            layout="@layout/main_nav_drawer"/>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>